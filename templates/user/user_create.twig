{% extends "base/layout.twig" %}
{% import 'base/form.twig' as form %}

{% block heading %}Benutzerverwaltung{% endblock %}

{% block content %}
<div class="form-box">
  <h2>Neuen Benutzer anlegen</h2>
  {% if errors %}
  <p class="error">Nutzer konnte nicht angelegt werden!</p>
  {% endif %}
  <form method="post" action="{{ url_for('do_create_user') }}">
    {{ form.input('email', 'email', 'E-Mail', prev.email, errors.email, {'maxlength':255}, required=true) }}
    <p><button type="submit">Anlegen</button></p>
  </form>
</div>
{% endblock %}