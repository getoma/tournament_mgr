{% extends 'base/layout.twig' %}
{% import 'base/form.twig' as form %}
{% import 'base/match.twig' as part %}

{% block nav_extension %}
  {% if route_context.tournament is not null %}
    <!-- Untermenü für die "Turnier-Hauptseite" -->
    <ul class="submenu">
      <li class="active">{{category.name}}</li>
      <li>
        <a href="{{ url_for('tournament_control', route_context.args) }}">
          Turnierleitung
        </a>
      </li>
      <li>
        <a href="{{ url_for('show_category_cfg', route_context.args) }}">
          Kategorie konfigurieren
        </a>
      </li>
    </ul>
  {% endif %}
{% endblock %}


{% block content %}
<div class="nav-cards">
{% if pools is not empty %}
  <a href="{{ url_for('show_category_pools', route_context.args) }}" class="card">
    <h3>Pools</h3>
  </a>

{% endif %}
{% if ko is defined %}
  <a href="{{ url_for('show_category_ko', route_context.args) }}" class="card">
    <h3>KO-Baum</h3>
  </a>
  {% endif %}
</div>
{% endblock %}

