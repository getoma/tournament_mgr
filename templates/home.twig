{% include 'base/header.twig' with { 'active_page': 'home' } %}

<ul class="tournament_list_by_state">
  {% for status, tournaments in tournaments_by_state %}
  <li class="status-box">
    <h2>{{status}}</h2>
    <table>
  <thead>
    <tr>
      <th>Datum</th>
      <th>Turnier</th>
    </tr>
  </thead>
  <tbody>
      {% for tournament in tournaments %}
      <tr>
        <td>{{ tournament.date }}</td>
        <td>
          <a href="{{ url_for('show_tournament', { tournamentId: tournament.id }) }}">
            {{ tournament.name }}
          </a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
</table>
  {%endfor%}
</ul>

<section>
  <p><a class="form-btn" href="{{url_for('new_tournament_form')}}">Neues Turnier anlegen</a></p>
</section>

{% include 'base/footer.twig' %}
