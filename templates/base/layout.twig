<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <title>{% block title %}Tournament powered by Slim{% endblock %}</title>
  <!-- Lokales CSS -->
  <link rel="stylesheet" href="{{ url_for('home') }}css/style.css">
</head>
<body>

  <!-- Header -->
  <header class="header">
  <div class="header-container">
    <h1>
      {% block heading %}
        {{ tournament.name|default('Kendo Turniersoftware') }}
      {% endblock %}
    </h1>

    <nav class="nav-actions">
      {% if current_user %}
        <a href="{{url_for('logout')}}">Logout</a>
        <a href="{{url_for('user_account')}}">Account</a>
        {%else%}
        <a href="{{url_for('login')}}">Login</a>
        {%endif%}
    </nav>
  </div>
  </header>

  <!-- Main Content -->
  <main class="login-page">
    <section id="content">
      {% block content %}
      <div class="login-card">
        <h2 class="login-title">Willkommen zur√ºck</h2>
        <p class="login-subtitle">Bitte melde dich an, um fortzufahren</p>

        <form action="{{ url_for('login') }}" method="POST" class="login-form">
          <div class="form-group">
            <label for="email">E-Mail</label>
            <input type="email" id="email" name="email" placeholder="E-Mail" required>
          </div>
          <div class="form-group">
            <label for="password">Passwort</label>
            <input type="password" id="password" name="password" placeholder="Passwort" required>
          </div>
          <button type="submit" class="btn-login">Login</button>
        </form>

        <div class="login-links">
          <a href="{{ url_for('forgot_password') }}">Passwort vergessen?</a>
          <a href="{{ url_for('register') }}">Registrieren</a>
        </div>
      </div>
      {% endblock %}
    </section>
  </main>

</body>
</html>
